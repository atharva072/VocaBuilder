<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6A1B9A"
    android:textAlignment="center"
    android:layout_centerInParent="true"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#6A1B9A"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/cw_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/round_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cw_6_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:text="Common words 1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/cw_6_word_meaning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:onClick="flipCard"
                android:fontFamily="monospace"
                android:text="Tap to see meaning →"
                android:textColor="@color/black"
                android:backgroundTint="#CFD8DC"/>

        </LinearLayout>

        <TextView
            android:id="@+id/word_meaning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:text="Meaning"
            android:fontFamily="monospace"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:background="@drawable/round_layout"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/text_message"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="Did you get it right?"
                android:fontFamily="monospace"
                android:gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/black"
                android:paddingTop="18dp"
                android:background="@drawable/round_layout"
                android:backgroundTint="#CFD8DC"/>

            <Button
                android:id="@+id/button_right"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#00C853"
                android:paddingTop="10dp"
                android:text="✔"
                android:textColor="#1B5E20"
                android:onClick="btnCorrectClick"/>

            <Button
                android:id="@+id/button_wrong"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#880E4F"
                android:paddingTop="10dp"
                android:text="❌"
                android:onClick="btnWrongClick"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
